# Requires: pip install scons && yum install rpm-build &&  yum install pam-devel

env = Environment(tools=['default', 'packaging'])
env.Install('/usr/lib64/security/', "pam_mkhomedir_plus.so")
env.Package(
             NAME           = 'pam_mkhomedir_plus',
             VERSION        = '1.0.1',
             PACKAGEVERSION = 0,
             PACKAGETYPE    = 'rpm',
             LICENSE        = 'gpl',
             SUMMARY        = 'pam_mkhomedir_plus is a pam module for creating user directories at login',
             DESCRIPTION    = 'pam_mkhomedir_plus is a pam module for creating user directories at login',
             X_RPM_GROUP    = 'Application/Security',
#             SOURCE_URL     = 'https://github.com/......'
        )
